<body>

    <header>
    </header>

    <div class="principal">
        <div class="row">
            <h2 class="title-form-create">Estás editando la artesanía: <"product.nombreProducto"></h2>
        </div>
    </div>
    <div class="title-form-create">
		<form method="POST" action="/productsEditForm">

      
           
			<div class="/edit">
                <div class="form-container-label">
                    <label for="nombreProducto" class="form-label">Nombre de la artesanía:</label>
                    <input type="text" id="nombreProducto" class="form-input" name="nombreProducto" placeholder="product.nombreProducto">
                </div>
            <div class="form-container-label">
                    <label for="comunidad" class="form-label">Comunidad:</label>
                    <input type="text" id="autor" class="form-input" name="comunidad" placeholder="product.comunidad">
            </div>
            <div class="form-container-label">
                <label for="categoria" class="form-label">Categoría:</label>
                <input type="text" id="categoria" class="form-input" name="categoria" placeholder="product.categoria">
            </div>
            <div class="form-container-label">
                <label for="precio" class="form-label">Precio:</label>
                <input type="text" id="precio" class="form-input" name="precio"  placeholder="product.precio">
            </div>
           
            <div class="form-container-label">
                <label for="categoria" class="form-label">SELECCIONE CATEGORIA</label>
                <select name="categoria" class="form-input" id="categoria" style="width: 100%; border: 2px solid #464646;">
                    <option value="recomendados" aria-placeholder="CATEGORIA">Recomendados</option>
                    <option value="mas vendidos">Mas vendidos</option>
                    <option value="novedades">Novedades</option>
                </select>
            </div>
            <div class="form-container-label">
                <label for="Caracteristicas">Caracteristica de la artesanía:</label>
                <textarea name="Caracteristicas" class="form-text" id="Caracteristicas"  style="width: 100%; border: 2px solid #464646;" placeholder="product.Caracteristicas"></textarea>
            </div>
            <div>
                <label for="image" class="form-label" style="font-size: 1.0em;
                color: #464646;
                text-transform: uppercase;
                display: flex;
                margin: 2vw;">Imagen:</label>
                <input type="file" name="image" id="image" class="form-input">
            </div>
            <div class="form-container-label">
                <button type="submit" class="boton1">Guardar cambios</button>
            </div>
            </div>
        </form>
    </div>
</form>
</div>

    <footer>
		<%- include('./footer.ejs')  %>
    </footer>

</body>


</html>